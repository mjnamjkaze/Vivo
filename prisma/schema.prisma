// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("user") // 'user' or 's-admin'
  createdAt DateTime @default(now())
  sessions  QuizSession[]
}

model Category {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  createdAt   DateTime     @default(now())
  questions   Question[]
  customExams CustomExam[]
}

model Question {
  id                Int      @id @default(autoincrement())
  question          String
  questionImageUrl  String?  // Optional image for the question
  optionA           String
  optionAImageUrl   String?  // Optional image for option A
  optionB           String
  optionBImageUrl   String?  // Optional image for option B
  optionC           String
  optionCImageUrl   String?  // Optional image for option C
  optionD           String
  optionDImageUrl   String?  // Optional image for option D
  correctAnswer     String   // A, B, C, or D
  tag               String   @default("Cơ Bản") // 'Cơ Bản', 'Nâng Cao', 'Tinh Thông'
  categoryId        Int
  category          Category @relation(fields: [categoryId], references: [id])
  createdAt         DateTime @default(now())
  answers           Answer[]
}

model QuizSession {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  categoryId  Int?     // Track which category this quiz is for
  ipAddress   String?  // Track user IP for statistics
  startTime   DateTime @default(now())
  endTime     DateTime?
  score       Int?
  totalQuestions Int   @default(20)
  timeLimit   Int      @default(600) // 10 minutes in seconds
  completed   Boolean  @default(false)
  answers     Answer[]
}

model Answer {
  id            Int         @id @default(autoincrement())
  sessionId     Int
  session       QuizSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  questionId    Int
  question      Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  userAnswer    String?     // A, B, C, or D
  isCorrect     Boolean?
  createdAt     DateTime    @default(now())
}

model QuizConfig {
  id                  Int      @id @default(autoincrement())
  questionCount       Int      @default(20)
  basicPercentage     Int      @default(60)  // % of "Cơ Bản" questions
  advancedPercentage  Int      @default(30)  // % of "Nâng Cao" questions
  masteryPercentage   Int      @default(10)  // % of "Tinh Thông" questions
  timeLimit           Int      @default(600) // Time limit in seconds (default 10 minutes)
  homepageMode        String   @default("categories") // "categories" or "custom-exams"
  updatedAt           DateTime @updatedAt
  createdAt           DateTime @default(now())
}

model CustomExam {
  id                  Int      @id @default(autoincrement())
  name                String
  description         String?
  categoryId          Int
  category            Category @relation(fields: [categoryId], references: [id])
  questionCount       Int      @default(20)
  basicPercentage     Int      @default(60)
  advancedPercentage  Int      @default(30)
  masteryPercentage   Int      @default(10)
  timeLimit           Int      @default(600) // Time limit in seconds
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}
