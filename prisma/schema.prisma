// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("user") // 'user' or 's-admin'
  createdAt DateTime @default(now())
  sessions  QuizSession[]
}

model Category {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  questions   Question[]
}

model Question {
  id                Int      @id @default(autoincrement())
  question          String
  questionImageUrl  String?  // Optional image for the question
  optionA           String
  optionAImageUrl   String?  // Optional image for option A
  optionB           String
  optionBImageUrl   String?  // Optional image for option B
  optionC           String
  optionCImageUrl   String?  // Optional image for option C
  optionD           String
  optionDImageUrl   String?  // Optional image for option D
  correctAnswer     String   // A, B, C, or D
  categoryId        Int
  category          Category @relation(fields: [categoryId], references: [id])
  createdAt         DateTime @default(now())
  answers           Answer[]
}

model QuizSession {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  startTime   DateTime @default(now())
  endTime     DateTime?
  score       Int?
  totalQuestions Int   @default(20)
  timeLimit   Int      @default(600) // 10 minutes in seconds
  completed   Boolean  @default(false)
  answers     Answer[]
}

model Answer {
  id            Int         @id @default(autoincrement())
  sessionId     Int
  session       QuizSession @relation(fields: [sessionId], references: [id])
  questionId    Int
  question      Question    @relation(fields: [questionId], references: [id])
  userAnswer    String?     // A, B, C, or D
  isCorrect     Boolean?
  createdAt     DateTime    @default(now())
}
